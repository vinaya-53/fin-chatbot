{
    "version": 2,
   "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
 "functions": {
    "api/**/*.py": {
      "includeFiles": "api/**",
      "excludeFiles": [
        "tests/**",
        "docs/**",
        ".git/**",
        "venv/**",
        "requirements.txt",
        "package/"
      ]
    }
  },
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "/app.py" }
  ]
 
  }
  