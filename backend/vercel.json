{
    "version": 2,
   "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "functions": {
    "api/**/*.py": {
      "includeFiles": "api/**",
      "excludeFiles": "test/**"
    }
  },
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "/app.py" }
  ]
 
  }
  